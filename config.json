{
  "name": "Kodi2Sonos",
  "version": "0.01",
  "slug": "kodi2sonos",
  "description": "An addon for playing kodi music library on sonos via HA interface",
  "url": "https://github.com/LauDela/HA-Kodi2Sonos",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "panel_icon": "mdi:library-music",
  "panel_title": "Kodi2Sonos",
  "panel_admin": false,
  "boot": "auto",
  "hassio_api": true,
  "homeassistant_api": true,
  "ingress": true,
  "map": [ "share:rw" ],  
  "options": {
	"Mysql": {
		"dbname": "MyMusic72",
		"servername": "ip_of_database_host",
		"db_username": "your db name",
		"db_password": "db password"
	},
	"URIreplace": {
		"uri_search": "",
		"uri_replace":"",
		"uri_search_song":"",
		"uri_replace_song":"",
		"uri_search_cover":"",
		"uri_replace_cover":""
	},
	"Destinations":{
		"Sonos_1_ip": "ip",
		"Sonos_1_name": "ip",
		"Kodi_1_ip": "ip",
		"Kodi_1_name": "ip",
		"Kodi_2_ip": "ip",
		"Kodi_2_name": "ip"
	},
	"Kodi credentials":{
		"kodi_user": "your_kodi_user",
		"kodi_password": "your_kodi_password",
		"kodi_port": "your_kodi_port"
	},
	"debug" : false
  },
  "schema": {
	"Mysql": {
		"dbname": "str",
		"servername": "str",
		"db_username": "str",
		"db_password": "str"
	},
	"URI replace": {
		"uri_search": "str",
		"uri_replace":"str",
		"uri_search_song":"str",
		"uri_replace_song":"str",
		"uri_search_cover":"str",
		"uri_replace_cover":"str"
	},
	"Destinations":{
		"Sonos_1_ip": "str",
		"Sonos_1_name": "str",
		"Kodi_1_ip": "str",
		"Kodi_1_name": "str",
		"Kodi_2_ip": "str",
		"Kodi_2_name": "str"
	},
	"Kodi_credentials":{
		"kodi_user": "str",
		"kodi_password": "str",
		"kodi_port": "str"
	},
	"debug" : "bool"	
  },
  "webui": "http://[HOST]:[PORT:8066]"
}
