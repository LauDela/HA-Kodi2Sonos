{
  "name": "Kodi2Sonos",
  "version": "0.051",
  "slug": "kodi2sonos",
  "description": "An addon for playing kodi music library on sonos via HA interface",
  "url": "https://github.com/LauDela/HA-Kodi2Sonos",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "panel_icon": "mdi:library-music",
  "panel_title": "Kodi2Sonos",
  "panel_admin": false,
  "boot": "auto",
  "init": false,
  "hassio_api": true,
  "hassio_role": "default",
  "homeassistant_api": true,
  "ingress": true,
  "services": ["mysql:need"], 
  "ports": {
    "8099/tcp": 8099
  },	
  "options": {
	   "Mysql": {
		    "dbname": "MyMusic72",
		    "servername": "ip_of_database_host",
		    "db_username": "your_db_username",
		    "db_password": "db_password"
	   },
	   "URIreplace": {
		    "uri_search": "smb://MEDIAS/Public/musique",
		    "uri_replace": "http://192.168.10.89/medias/musique",
		    "uri_search_song": "smb",
		    "uri_replace_song": "x-file-cifs",
		    "uri_search_cover": "//MEDIAS/Public/musique",
		    "uri_replace_cover": "medias/musique"
	   },
	   "Destinations":{
		    "Sonos_1_ip": "192.168.10.4",
		    "Sonos_1_name": "Cuisine",
		    "Kodi_1_ip": "ip",
		    "Kodi_1_name": "name",
		    "Kodi_2_ip": "ip",
		    "Kodi_2_name": "name"
	   },
	   "Kodi_credentials":{
		    "kodi_user": "kodi",
		    "kodi_password": "your_kodi_password",
		    "kodi_port": "8080"
	   },
	   "debug" : false
  },
  "schema": {
	   "Mysql": {
		    "dbname": "str?",
		    "servername": "str?",
		    "db_username": "str?",
		    "db_password": "password?"
	   },
	   "URIreplace": {
		    "uri_search": "str?",
		    "uri_replace":"str?",
		    "uri_search_song":"str?",
		    "uri_replace_song":"str?",
		    "uri_search_cover":"str?",
		    "uri_replace_cover":"str?"
	   },
	   "Destinations":{
		    "Sonos_1_ip": "str?",
		    "Sonos_1_name": "str?",
		    "Kodi_1_ip": "str?",
		    "Kodi_1_name": "str?",
		    "Kodi_2_ip": "str?",
		    "Kodi_2_name": "str?"
	   },
	   "Kodi_credentials":{
		    "kodi_user": "str?",
		    "kodi_password": "str?",
		    "kodi_port": "int?"
	   },
	   "debug" : "bool",
     "log_level": "list(trace|debug|info|notice|warning|error|fatal)?"	
  }
}
